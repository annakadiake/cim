# ============================================
# CIMEF - Configuration Production
# DigitalOcean Droplet + Managed Database
# IMPORTANT : Modifier ces valeurs avant déploiement !
# ============================================

# Django
# Générer avec : python3 -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGEZ-MOI-avec-une-cle-secrete-tres-longue-et-aleatoire
DEBUG=False

# Base de données DigitalOcean Managed MySQL
# Infos disponibles dans : DigitalOcean → Databases → Connection Details
DB_DATABASE=cimef_db
DB_USERNAME=doadmin
DB_PASSWORD=VOTRE_MOT_DE_PASSE_DB_DIGITALOCEAN
DB_HOST=db-mysql-xxx-do-user-xxx.ondigitalocean.com
DB_PORT=25060

# Domaine (mettre votre domaine ou IP du Droplet)
ALLOWED_HOSTS=VOTRE_IP_DROPLET,votre-domaine.com,www.votre-domaine.com
PATIENT_PORTAL_URL=http://VOTRE_IP_DROPLET/patient

# Orange SMS API (Sénégal)
# Créer un compte sur https://developer.orange.com
# Souscrire à l'API "SMS Senegal" et récupérer les credentials
ORANGE_SMS_ENABLED=True
ORANGE_SMS_CLIENT_ID=VOTRE_CLIENT_ID_ORANGE
ORANGE_SMS_CLIENT_SECRET=VOTRE_CLIENT_SECRET_ORANGE
ORANGE_SMS_SENDER_NUMBER=VOTRE_NUMERO_ORANGE
ORANGE_SMS_SENDER_NAME=CIMEF
